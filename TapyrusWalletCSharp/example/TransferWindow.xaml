<Window x:Class="TapyrusWalletExample.TransferWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Send TPC" Height="340" Width="420"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Recipient -->
        <TextBlock Grid.Row="0" Text="Recipient Address" FontWeight="SemiBold" Margin="0,0,0,4"/>
        <TextBox x:Name="AddressText" Grid.Row="1" Padding="6" Margin="0,0,0,12"/>

        <!-- Amount -->
        <TextBlock Grid.Row="2" Text="Amount (TPC)" FontWeight="SemiBold" Margin="0,0,0,4"/>
        <TextBox x:Name="AmountText" Grid.Row="3" Padding="6" Margin="0,0,0,4"
                 TextChanged="AmountText_TextChanged"/>

        <!-- Balance and Validation -->
        <StackPanel Grid.Row="4" Margin="0,0,0,12">
            <TextBlock x:Name="InsufficientText" Text="Insufficient balance" Foreground="Red"
                       FontSize="12" Visibility="Collapsed"/>
            <TextBlock x:Name="BalanceText" Foreground="Gray" FontSize="12"/>
        </StackPanel>

        <!-- Processing Indicator -->
        <StackPanel x:Name="ProcessingPanel" Grid.Row="5" Orientation="Horizontal"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Visibility="Collapsed">
            <TextBlock Text="Processing..." Foreground="Gray"/>
        </StackPanel>

        <!-- Buttons -->
        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="CancelButton" Grid.Column="0" Content="Cancel" Click="Cancel_Click"
                    Padding="12,10"/>
            <Button x:Name="SendButton" Grid.Column="2" Content="Send" Click="Send_Click"
                    Padding="12,10" Background="#4CAF50" Foreground="White"/>
        </Grid>
    </Grid>
</Window>
